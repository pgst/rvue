<div class="mx-auto md:w-2/3 w-full">
  <h2 class="font-bold text-4xl">新規アドミン登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "contents"}) do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>

    <div class="my-5">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上が必要です。)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= f.submit "登録", class: "rounded-lg py-3 px-5 text-white inline-block font-medium cursor-pointer bg-blue-600" %>
    </div>
  <% end %>

  <%= render "admins/shared/links" %>
</div>
